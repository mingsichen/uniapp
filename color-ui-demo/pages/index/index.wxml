<basics wx:if="{{PageCur=='basics'}}"></basics>
<component wx:if="{{PageCur=='component'}}"></component>
<centerbtn wx:if="{{PageCur=='centerbtn'}}"></centerbtn>
<plugin wx:if="{{PageCur=='plugin'}}"></plugin>
<about wx:if="{{PageCur=='about'}}"></about>

<view class="cu-bar tabbar bg-white foot">
	<view class="action " bindtap="NavChange" data-cur="basics">
		<view class="{{PageCur=='basics'?'text-green':'text-gray'}}">
			<view class="cuIcon-homefill"></view> 首页
		</view>
	</view>
	<view class="action " bindtap="NavChange" data-cur="component">
		<view class="{{PageCur=='component'?'text-green':'text-gray'}}">
			<view class="cuIcon-similar"></view> 分类
		</view>
	</view>

	<view class="action text-gray add-action" bindtap="NavChange" data-cur="centerbtn">
		<view class="{{PageCur=='centerbtn'? 'text-green': 'text-gray'}}">
			<button class="cu-btn cuIcon-add bg-green  shadow" ></button>
			发布
		</view>
	</view>

	<view class="action " bindtap="NavChange" data-cur="plugin">
		<view class="{{PageCur=='plugin'?'text-green':'text-gray'}}">
			<view class="cuIcon-cart">
				<view class="cu-tag badge">99</view>
			</view>
			购物车
		</view>
	</view>
	<view class="action " bindtap="NavChange" data-cur="about">
		<view class="{{PageCur=='about'?'text-green':'text-gray'}}">
			<view class="cuIcon-my">
				<view class="cu-tag badge"></view>
			</view>
			我的
		</view>
	</view>
</view>
